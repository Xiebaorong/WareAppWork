<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:background="@mipmap/background_login"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >
        <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"

            />
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/iv_app_logo"
            android:layout_centerHorizontal="true"
            android:text="****"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            />

        <EditText
            android:id="@+id/et_name_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_app_name"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:hint="账号"
            />
        <EditText
            android:id="@+id/et_pass_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/et_name_login"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:hint="密码"
            android:inputType="textPassword"
            />

        <CheckBox
            android:id="@+id/cb_rememberPass_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et_pass_login"
            android:layout_below="@+id/et_pass_login"
            android:text="记住密码"
            />

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/cb_rememberPass_login"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="30dp"
            android:onClick="loginAppClick"
            android:text="登录"
            android:background="@drawable/btn_background_login"
            />

        <TextView
            android:id="@+id/tv_registerAforget_login"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/btn_login_login"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"

            />

    </RelativeLayout>

</RelativeLayout>
