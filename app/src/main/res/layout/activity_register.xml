<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xie.wareapp.ui.activity.RegisterActivity">
    <include layout="@layout/header"
        android:id="@+id/header_register"/>

    <TextView
        android:id="@+id/tv_hint_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入手机号, 快速注册"
        android:textColor="@color/colorBlack"
        android:textSize="23sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/header_register"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_areacode_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_hint_register"
        android:layout_marginTop="55dp"
        android:drawableRight="@mipmap/tv_aceacode_right_image"
        android:text="中国 +86"
        android:background="@drawable/tv_background_rigister"
        />

    <View
        android:id="@+id/ve_underline1_register"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/tv_areacode_register"

        android:layout_marginLeft="25dp"
        />

    <EditText
        android:id="@+id/et_phone_register"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="25dp"
        android:gravity="center_vertical"
        android:layout_below="@id/ve_underline1_register"
        android:layout_marginTop="5dp"
        android:hint="手机号"
        android:inputType="number"
        android:background="@null"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/et_phone_register"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/view" />

    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/view"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/btn_background_register"
        android:onClick="registerAppClick"
        android:text="注册"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
